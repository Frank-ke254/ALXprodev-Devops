#!/bin/bash

DATA_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

if [ ! -d "$DATA_DIR" ]; then
    echo "Error: Directory '$DATA_DIR' not found!"
    exit 1
fi

echo "Name,Height(m),Weight(kg)" > "$OUTPUT_FILE"

for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\L&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    height_m=$(awk "BEGIN {print $height / 10}")
    weight_kg=$(awk "BEGIN {print $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

sed -i 's/\b[a-z]/\u&/g' "$OUTPUT_FILE"

echo "Report generated: $OUTPUT_FILE"
echo

cat "$OUTPUT_FILE"
echo

awk -F, '
NR>1 { total_h += $2; total_w += $3; count++ }
END {
    if (count > 0) {
        print "ðŸ“Š Average Height (m): " total_h/count
        print "ðŸ“Š Average Weight (kg): " total_w/count
    }
}' "$OUTPUT_FILE"
